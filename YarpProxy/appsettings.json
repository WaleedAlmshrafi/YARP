{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "YARP": {
    "Routes": {
      "TestApi": {
        "ClusterId": "apiTest",
        "Match": {
          "Path": "/swagger/{**catch-all}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "PATCH"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "swagger/{**catch-all}"
          },
          {
            "X-Forwarded" : "Off"
          }
        ]
      },
      "WeatherforecastApi": {
        "ClusterId": "Google",
        "Match": {
          "Path": "/weatherforecast",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "PATCH"
          ]
        },
        "Transforms": [
          
          {
            "PathRemovePrefix": "/weatherforecast"
          }
        ]
      }
    },
    "Clusters": {
      "apiTest": {
        "Destinations": {
          "TestApi": {
            "Address": "http://localhost:5114"
          }
        }
      },
      "Google": {
        "Destinations": {
          "google": {
            "Address": "https://www.google.com/"
          }
        }
      }
    }
  }
}

